<h1>All task</h1>

<ul>
  <% @tasks.each do |task| %>
    <li> <%= link_to task.title, task_path(task)%> - <%= task.details %> - <%= task.completed %>
     <%= link_to "Delete",task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
